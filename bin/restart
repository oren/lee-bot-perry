#!/bin/bash

PATH=$PATH:/home/t/bin
APP=/usr/local/nextgen/lee-bot-perry

export HUBOT_IRC_SERVER="irc.flight.yellowpages.com"
export HUBOT_IRC_ROOMS="#foo,#dstools,#cyx"
export HUBOT_IRC_NICK="tools-bot"
export HUBOT_LOG_LEVEL="debug"  # This helps to see what Hubot is doing
export HUBOT_IRC_DEBUG="true"
export LOUD_CONFIG="/usr/local/nextgen/lee-bot-perry/shared/config.js"

cd $APP/current
npm install
forever stopall
forever start --pidFile $APP/shared/pids/lee-bot-perry.pid -o $APP/shared/logs/lee-bot-perry.log -e $APP/shared/logs/lee-bot-perry.err -c bash $APP/current/bin/hubot -a irc

