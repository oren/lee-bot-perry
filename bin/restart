#!/bin/bash

PATH=$PATH:/home/t/bin
APP=/usr/local/nextgen/lee-bot-perry

export HUBOT_IRC_SERVER="irc.flight.yellowpages.com"
export HUBOT_IRC_ROOMS="#foo"
export HUBOT_IRC_NICK="tools-bot"
export HUBOT_LOG_LEVEL="debug"  # This helps to see what Hubot is doing
export HUBOT_IRC_DEBUG="true"

cd $APP/current
npm install
rm $APP/shared/logs/forever.log
#forever stopall
#forever start --pidFile $APP/shared/pids/lee-bot-perry.pid -l $APP/shared/logs/forever.log -o $APP/shared/logs/lee-bot-perry.log -e $APP/shared/logs/lee-bot-perry.err $APP/current/bin/hubot -a irc

./bin/hubot -a irc &

